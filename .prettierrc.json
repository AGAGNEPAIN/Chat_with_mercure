{
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "parser": "babel",
        "vueIndentScriptAndStyle": true,
        "useTabs": false,
        "singleQuote": false,
        "tabWidth": 4
      }
    },
    {
      "files": "*.vue",
      "options": {
        "semi": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "parser": "vue",
        "vueIndentScriptAndStyle": false,
        "useTabs": false,
        "singleQuote": false,
        "tabWidth": 4
      }
    },
    {
      "files": [
        "*.css"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}