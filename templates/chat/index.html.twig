	{{ parent() }}
	{{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}
	<div class="alert alert-info text-center m-0">
		Connected as {{ app.user.username }}!
	</div>
	<div id="app" style="height: calc(100vh - 106px);">
